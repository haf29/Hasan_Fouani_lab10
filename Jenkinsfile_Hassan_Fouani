pipeline {
  agent any
  environment { VENV = 'venv' }

  stages {
    stage('Setup') {
      steps {
        bat """
        if not exist %VENV% py -3 -m venv %VENV%
        call %VENV%\\Scripts\\activate
        python -m pip install --upgrade pip
        python -m pip install -r requirements.txt
        """
      }
    }

    stage('Lint') {
      steps {
        bat "call %VENV%\\Scripts\\activate && python -m flake8 app.py"
      }
    }

    stage('Test') {
      steps {
        bat "call %VENV%\\Scripts\\activate && python -m pytest -q"
      }
    }

    stage('Deploy') {
      steps {
        echo "Deploying..."
      }
    }
  }

  post {
    always { cleanWs() }
  }
}

